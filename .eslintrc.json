{
  "root": true,
  "extends": ["next/core-web-vitals", "eslint-config-prettier"],
  "plugins": ["testing-library", "eslint-plugin-prettier"],
  "rules": {
    "no-console": 2,
    "prettier/prettier": 2
  },
  "overrides": [
    // Only uses Testing Library lint rules in test files
    {
      "files": [
        "**/__tests__/**/*.[jt]s?(x)",
        "**/?(*.)+(spec|test).[jt]s?(x)"
      ],
      "extends": ["plugin:testing-library/react"]
    }
  ]
}

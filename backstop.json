{
  "id": "backstop_default",
  "viewports": [
    {
      "label": "phone",
      "width": 320,
      "height": 1024
    },
    {
      "label": "tablet",
      "width": 1024,
      "height": 768
    }
  ],
  "onBeforeScript": "playwright/onBefore.js",
  "onReadyScript": "playwright/onReady.js",
  "scenarios": [
    {
      "label": "Walcron Homepage",
      "url": "http://localhost:3000",
      "delay": 500,
      "postInteractionWait": 0,
      "selectorExpansion": true,
      "expect": 0,
      "misMatchThreshold": 0.1,
      "requireSameDimensions": true
    },
    {
      "label": "Walcron Homepage with cookie accepted",
      "url": "http://localhost:3000",
      "delay": 500,
      "clickSelector": "text=Close",
      "postInteractionWait": 0,
      "selectorExpansion": true,
      "expect": 0,
      "misMatchThreshold": 0.1,
      "requireSameDimensions": true
    },
    {
      "label": "Walcron with email entered and sent",
      "cookieDomain": "localhost",
      "cookiePath": "backstop_data/engine_scripts/cookies.json",
      "url": "http://localhost:3000",
      "delay": 500,
      "keyPressSelectors": [
        {
          "selector": "[placeHolder='Honorific and name']",
          "keyPress": "Rascal"
        }
      ],
      "clickSelector": "text=Send",
      "postInteractionWait": 0,
      "selectorExpansion": true,
      "expect": 0,
      "misMatchThreshold": 0.1,
      "requireSameDimensions": true
    },
    {
      "label": "Commandbar can search",
      "cookieDomain": "localhost",
      "cookiePath": "backstop_data/engine_scripts/cookies.json",
      "url": "http://localhost:3000",
      "delay": 500,
      "keyPressSelectors": [
        {
          "selector": "[data-testid='commandBar']",
          "keyPress": "help"
        }
      ],
      "clickSelector": "[data-testid='commandBar-enter']",
      "postInteractionWait": 400,
      "selectorExpansion": true,
      "expect": 0,
      "misMatchThreshold": 0.1,
      "requireSameDimensions": false,
      "viewports": [
        {
          "label": "tablet",
          "width": 1024,
          "height": 768
        }
      ]
    },
    {
      "label": "About Page",
      "url": "http://localhost:3000/about",
      "delay": 1000,
      "selectorExpansion": true,
      "expect": 0,
      "misMatchThreshold": 0.1,
      "requireSameDimensions": true
    }
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/bitmaps_local_reference",
    "bitmaps_test": "backstop_data/bitmaps_local_test",
    "engine_scripts": "backstop_data/engine_scripts",
    "html_report": "backstop_data/html_report",
    "ci_report": "backstop_data/ci_report"
  },
  "report": [
    "browser"
  ],
  "engine": "playwright",
  "engineOptions": {
    "browser": "chromium",
    "args": [
      "--no-sandbox"
    ]
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false
}
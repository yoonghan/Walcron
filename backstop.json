{
  "id": "backstop_default",
  "viewports": [
    {
      "label": "phone",
      "width": 320,
      "height": 1024
    },
    {
      "label": "tablet",
      "width": 1024,
      "height": 768
    }
  ],
  "onBeforeScript": "playwright/onBefore.js",
  "onReadyScript": "playwright/onReady.js",
  "scenarios": [
    {
      "label": "Walcron Homepage",
      "url": "http://localhost:3000",
      "delay": 500,
      "postInteractionWait": 0,
      "selectorExpansion": true,
      "expect": 0,
      "misMatchThreshold": 0.1,
      "requireSameDimensions": true
    },
    {
      "label": "Walcron Homepage with cookie accepted",
      "url": "http://localhost:3000",
      "delay": 500,
      "clickSelector": "text=Close",
      "postInteractionWait": 0,
      "selectorExpansion": true,
      "expect": 0,
      "misMatchThreshold": 0.1,
      "requireSameDimensions": true
    },
    {
      "label": "Walcron with email entered and sent",
      "cookieDomain": "localhost",
      "cookiePath": "backstop_data/engine_scripts/cookies.json",
      "url": "http://localhost:3000",
      "delay": 500,
      "scrollBySelector": {
        "id": "#parallax-container",
        "posY": 10000
      },
      "clickSelector": "text=Write To Us",
      "postInteractionWait": 1000,
      "selectorExpansion": true,
      "expect": 0,
      "misMatchThreshold": 0.1,
      "requireSameDimensions": true
    },
    {
      "label": "Commandbar can search",
      "cookieDomain": "localhost",
      "cookiePath": "backstop_data/engine_scripts/cookies.json",
      "url": "http://localhost:3000",
      "delay": 500,
      "keyPressSelectors": [
        {
          "selector": "[data-testid='commandBar']",
          "keyPress": "help"
        }
      ],
      "clickSelector": "[data-testid='commandBar-enter']",
      "postInteractionWait": 400,
      "selectorExpansion": true,
      "expect": 0,
      "misMatchThreshold": 0.1,
      "requireSameDimensions": false,
      "viewports": [
        {
          "label": "tablet",
          "width": 1024,
          "height": 768
        }
      ]
    },
    {
      "label": "Walcron Homepage is scrollable",
      "url": "http://localhost:3000",
      "cookieDomain": "localhost",
      "cookiePath": "backstop_data/engine_scripts/cookies.json",
      "delay": 500,
      "postInteractionWait": 2000,
      "selectorExpansion": true,
      "expect": 0,
      "misMatchThreshold": 0.4,
      "scrollBySelector": {
        "id": "#parallax-container",
        "posY": 2048
      },
      "requireSameDimensions": true
    },
    {
      "label": "Walcron Homepage on Desktop/tablet can access from navigation",
      "url": "http://localhost:3000",
      "cookieDomain": "localhost",
      "cookiePath": "backstop_data/engine_scripts/cookies.json",
      "delay": 500,
      "postInteractionWait": 2000,
      "selectorExpansion": true,
      "expect": 0,
      "misMatchThreshold": 0.4,
      "clickSelector": "nav:has-text('Testing Deployment')",
      "requireSameDimensions": true,
      "viewports": [
        {
          "label": "tablet",
          "width": 1024,
          "height": 768
        }
      ]
    },
    {
      "label": "About Page",
      "url": "http://localhost:3000/about",
      "delay": 100,
      "expect": 0,
      "misMatchThreshold": 0.5,
      "requireSameDimensions": true
    },
    {
      "label": "History Page",
      "url": "http://localhost:3000/history",
      "delay": 500,
      "expect": 0,
      "misMatchThreshold": 0.4,
      "requireSameDimensions": true
    },
    {
      "label": "Projects Page",
      "url": "http://localhost:3000/projects",
      "delay": 200,
      "expect": 0,
      "misMatchThreshold": 0.4,
      "requireSameDimensions": true
    },
    {
      "label": "Sitemap Page",
      "url": "http://localhost:3000/sitemap",
      "delay": 200,
      "expect": 0,
      "misMatchThreshold": 0.4,
      "requireSameDimensions": true
    },
    {
      "label": "AMP Page",
      "url": "http://localhost:3000/experiments/amp",
      "delay": 100,
      "expect": 0,
      "misMatchThreshold": 0.4,
      "haveCustomHeaders": false,
      "requireSameDimensions": true,
      "viewports": [
        {
          "label": "mobile",
          "width": 640,
          "height": 768
        }
      ]
    }
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/bitmaps_local_reference",
    "bitmaps_test": "backstop_data/bitmaps_local_test",
    "engine_scripts": "backstop_data/engine_scripts",
    "html_report": "backstop_data/html_report",
    "ci_report": "backstop_data/ci_report"
  },
  "report": [
    "browser"
  ],
  "engine": "playwright",
  "engineOptions": {
    "browser": "chromium",
    "args": [
      "--no-sandbox"
    ]
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false
}